@model IEnumerable<ExploreMidwest.Model.Blog>

@{
    ViewBag.Title = "Pending Posts";
}

<h2>Pending Posts</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        @Html.HiddenFor(modelItem => item.IsFinished)
        @Html.HiddenFor(modelItem => item.IsDeleted)
        <td>
            @Html.ActionLink("Edit", "EditBlog", new { id=item.BlogId }) |
            @Html.ActionLink("Delete", "DeleteBlog", new { id=item.BlogId })
        </td>
    </tr>
}

</table>
